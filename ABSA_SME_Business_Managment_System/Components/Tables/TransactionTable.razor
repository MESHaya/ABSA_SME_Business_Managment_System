@using ABSA_SME_Business_Managment_System.Components.Models

<link href="~/app.css" rel="stylesheet" />


<h3>Transactions</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Payment Method</th>
            <th>Category</th>
            <th>Created By</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @if (Transactions != null && Transactions.Any())
        {
            @foreach (var t in Transactions)
            {
                <tr>
                    <td>@t.Date.ToShortDateString()</td>
                    <td>@t.Description</td>
                    <td>@t.TransactionType</td>
                    <td>@t.Amount.ToString("C")</td>
                    <td>@t.PaymentMethod</td>
                    <td>@t.Category</td>
                    <td>@t.CreatedBy</td>
                    <td>@t.ReferenceNumber</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="8">No transactions available.</td></tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<Transaction>? Transactions { get; set; }
}