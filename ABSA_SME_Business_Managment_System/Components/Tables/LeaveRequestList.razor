<h3>LeaveRequestList</h3>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (LeaveRequests != null && LeaveRequests.Any())
        {
            @foreach (var r in LeaveRequests)
            {
                <tr>
                    <td>@r.EmployeeName</td>
                    <td>@r.StartDate.ToShortDateString()</td>
                    <td>@r.EndDate.ToShortDateString()</td>
                    <td>@r.Status</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4">No leave requests submitted.</td></tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<LeaveRequest>? LeaveRequests { get; set; }
}
