<h3>StockT</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (StockItems != null && StockItems.Any())
        {
            @foreach (var s in StockItems)
            {
                <tr>
                    <td>@s.ItemName</td>
                    <td>@s.Quantity</td>
                    <td>@s.Price.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3">No stock items available.</td></tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<StockItems>? StockItems { get; set; }
}
