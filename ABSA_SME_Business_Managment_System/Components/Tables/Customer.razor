<h3>Customer</h3>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @if (Customers != null && Customers.Any())
        {
            @foreach (var c in Customers)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Email</td>
                    <td>@c.Phone</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3">No customers found.</td></tr>
        }
    </tbody>
</table>

@code {
    [Parameter] public IEnumerable<Customer>? Customers { get; set; }
}
