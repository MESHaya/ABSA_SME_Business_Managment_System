            await LoadTimesheets();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApproveTimesheet(int id)
    {
        if (string.IsNullOrEmpty(currentManagerId)) return;

        isProcessing = true;
        statusMessage = null;

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            
            var entry = await context.TimesheetEntries.FirstOrDefaultAsync(t => t.Id == id);
            if (entry == null)
            {
                statusMessage = "Error: Timesheet entry not found.";
                return;
            }

            entry.IsApproved = true;
            entry.IsRejected = false;
            entry.ApprovedByManagerId = currentManagerId;
            entry.ApprovedDate = DateTime.UtcNow;

            await context.SaveChangesAsync();

            statusMessage = "Timesheet approved successfully.";
            Logger.LogInformation("Manager {ManagerId} approved timesheet {TimesheetId}", currentManagerId, id);
            
            await LoadTimesheets();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
            Logger.LogError(ex, "Error approving timesheet");
        }
        finally
        {
            isProcessing = false;
        }
    }

