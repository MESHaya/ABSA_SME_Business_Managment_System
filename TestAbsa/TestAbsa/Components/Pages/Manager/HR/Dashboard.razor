    private async Task ConfirmTimesheetReject()
    {
        if (timesheetRejectTargetId == 0) return;

        if (string.IsNullOrWhiteSpace(timesheetRejectionReason))
        {
            statusMessage = "Error: Please provide a reason for rejection.";
            return;
        }

        if (string.IsNullOrEmpty(currentManagerId)) return;

        isProcessing = true;
        statusMessage = null;

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            
            var entry = await context.TimesheetEntries.FirstOrDefaultAsync(t => t.Id == timesheetRejectTargetId);
            if (entry == null)
            {
                statusMessage = "Error: Timesheet entry not found.";
                return;
            }

            entry.IsRejected = true;
            entry.IsApproved = false;
            entry.RejectionReason = timesheetRejectionReason;
            entry.RejectedByManagerId = currentManagerId;
            entry.RejectedDate = DateTime.UtcNow;

            await context.SaveChangesAsync();

            statusMessage = "Timesheet rejected successfully.";
            Logger.LogInformation("Manager {ManagerId} rejected timesheet {TimesheetId}", currentManagerId, timesheetRejectTargetId);
            
            CloseTimesheetRejectModal();
            await LoadTimesheets();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
            Logger.LogError(ex, "Error rejecting timesheet");
        }
        finally
        {
            isProcessing = false;
        }
    }

