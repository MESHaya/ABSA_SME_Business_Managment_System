    private async Task LoadTimesheets()
    {
        if (string.IsNullOrEmpty(currentManagerId))
        {
            statusMessage = "Error: Manager ID not found.";
            return;
        }

        try
        {
            using var context = await DbContextFactory.CreateDbContextAsync();
            
            var query = context.TimesheetEntries
                .Include(t => t.Employee)
                .Where(t => t.Employee.OrganizationId == managerOrganizationId)
                .AsQueryable();

            query = timesheetFilter switch
            {
                "Approved" => query.Where(t => t.IsApproved),
                "Rejected" => query.Where(t => t.IsRejected),
                _ => query.Where(t => !t.IsApproved && !t.IsRejected)
            };

            timesheets = await query
                .OrderByDescending(t => t.WorkDate)
                .ThenByDescending(t => t.CreatedDate)
                .Take(50)
                .ToListAsync();

            if (timesheets == null)
                timesheets = new List<TimesheetEntry>();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading timesheets");
            statusMessage = $"Error loading timesheets: {ex.Message}";
            timesheets = new List<TimesheetEntry>();
        }
    }

    private async Task ChangeTimesheetFilter(string newFilter)
    {
        timesheetFilter = newFilter;
        isLoading = true;
        statusMessage = null;

        try
